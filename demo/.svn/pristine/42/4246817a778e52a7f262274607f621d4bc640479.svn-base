<ion-split-pane>
<ion-menu [content]="content">
  <ion-content class="side-menu-gradient">
    <ion-thumbnail>
      <img class="profile-image" img src="assets/images/katerralogo.png"/>
    </ion-thumbnail>
    <ion-list>
      <button menuClose ion-item *ngFor="let p of pages" (click)="openPage(p)" class="side-menu-item">
        <ion-icon [name]="p.icon"></ion-icon>
        {{p.title}}
      </button>
    </ion-list>
  </ion-content>
</ion-menu>  
<!-- Disable swipe-to-go-back because it's poor UX to combine STGB with side menus -->
<ion-nav  [root]="rootPage" main #content></ion-nav>
</ion-split-pane>