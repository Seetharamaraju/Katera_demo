<ion-header>
  <ion-navbar color="theme">
    <button ion-button menuToggle>
      <ion-icon name="menu"></ion-icon>
    </button>
    <ion-title>Register</ion-title>
  </ion-navbar>
</ion-header>

<ion-content  class="login-content" padding>
  <div class="login-box">

    <ion-label primary>Controller Id : {{controllerId}}</ion-label>
  <form [formGroup]="form" #registerForm="ngForm">
  <ion-row>
    <ion-col>
  <ion-list  >
 		<ion-item>
      		<ion-input [(ngModel)]="firstName" placeholder="First Name" formControlName="firstName" type="text" required></ion-input>
          <p>{{formErrors.userName}}</p>
    </ion-item>
    <div *ngIf="!form.controls.firstName.valid  && (form.controls.firstName.dirty || submitAttempt)">
                <p>Please enter a valid name.</p>
    </div>
    <ion-item>
      		<ion-input [(ngModel)]="lastName" placeholder="Last Name" formControlName="lastName" type="text" maxlength="16" required></ion-input>
          <p>{{formErrors.userName}}</p>
    </ion-item>
    <div *ngIf="!form.controls.lastName.valid  && (form.controls.lastName.dirty || submitAttempt)">
                <p>Please enter a valid name.</p>
    </div>
    <ion-item>
          <ion-input [(ngModel)]="userEmail" formControlName="userEmail"   type="email" placeholder="Email" required></ion-input>
    </ion-item>
    <div *ngIf="!form.controls.userEmail.valid  && (form.controls.userEmail.dirty || submitAttempt)">
                <p>Please enter a valid Email Id.</p>
    </div>
 		<ion-item>
      		<ion-input [(ngModel)]="userPassword" formControlName="userPassword" placeholder="Password" type="password" maxlength="40" 			minlength="8" required></ion-input>
    </ion-item>
     <div *ngIf="!form.controls.userPassword.valid  && (form.controls.userPassword.dirty || submitAttempt)">
                <p> Password Must contain atleast 8 Characters, 1 Upper Case, 1 Lower Case, 1 special Character</p>
    </div>
    <ion-item>
          <ion-input [(ngModel)]="cnfmpassword" placeholder="Confirm password" formControlName="cnfmpassword"
          type="password" maxlength="40" minlength="8" required></ion-input>
    </ion-item>
    <div *ngIf="!form.controls.cnfmpassword.valid  && (form.controls.cnfmpassword.dirty || submitAttempt)">
                <p>Password and Confirm Password Should be Same</p>
    </div>
    <ion-item>
          <ion-input [(ngModel)]="userSSN" placeholder="SSN No (Optional)" formControlName="userSSN" type="text"></ion-input>
          <p>{{formErrors.userName}}</p>
    </ion-item>
    <ion-item>
          <ion-input [(ngModel)]="userCity" placeholder="City" formControlName="userCity" type="text" required></ion-input>
          <p>{{formErrors.userName}}</p>
    </ion-item>
    <ion-item>
          <ion-input [(ngModel)]="userState" placeholder="State" formControlName="userState" type="text" required></ion-input>
          <p>{{formErrors.userName}}</p>
    </ion-item>
    <ion-item>
      <ion-label primary>Account Type : </ion-label>
      <ion-select [(ngModel)]="accountType" formControlName="accountType">
        <ion-option value="Basic" class = "dropdown">Basic</ion-option>
        <ion-option value="Premium">Premium</ion-option>
      </ion-select>
    </ion-item>
    <ion-item>
      <ion-label primary>Site Type : </ion-label>
      <ion-select [(ngModel)]="siteType" formControlName="siteType">
        <ion-option value="House" class = "dropdown">House</ion-option>
        <ion-option value="Flat">Flat</ion-option>
        <ion-option value="Office">Office</ion-option>
        <ion-option value="Community">Community</ion-option>
      </ion-select>
    </ion-item>
     <ion-list *ngIf="this.notify">
      <ion-label class="validations" >please fill all fields.
      </ion-label>
    </ion-list>
 	</ion-list>
   </ion-col>
   </ion-row>

   <ion-row>
	<ion-col class="signup-col">
	  <button ion-button class="submit-btn" [disabled]="!registerForm.form.valid"full type="submit" (click)="signLogin()">Register</button>
	</ion-col>
	<ion-col class="signup-col">
	  <button ion-button class="submit-btn" (click)="goBackToSighnup()">Cancel</button>
	</ion-col>
  </ion-row>
</form>

</div>

</ion-content>